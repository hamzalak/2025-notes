// component.ts
import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';

interface Slide {
  id: number;
  title: string;
  image: string;
}

interface Prompt {
  id: number;
  name: string;
  slides: Slide[];
}

@Component({
  selector: 'app-referenced-slides',
  standalone: true,
  imports: [CommonModule],
  template: `
    <div class="container">
      <div class="card">
        <h2 class="title">Referenced slides</h2>
        
        <div class="prompts-container">
          <div class="vertical-line"></div>
          
          <div *ngFor="let prompt of prompts; let last = last" class="prompt-item">
            <button 
              class="prompt-button"
              (click)="togglePrompt(prompt.id)"
            >
              <div class="prompt-left">
                <div class="green-dot"></div>
                <span class="prompt-name">{{ prompt.name }}</span>
              </div>
              <svg 
                class="chevron"
                [class.expanded]="expandedPrompt === prompt.id"
                width="20" 
                height="20" 
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor"
              >
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
            
            <div 
              class="slides-container"
              *ngIf="expandedPrompt === prompt.id"
            >
              <div *ngFor="let slide of prompt.slides" class="slide-item">
                <img [src]="slide.image" [alt]="slide.title" class="slide-image">
              </div>
            </div>
          </div>
        </div>
        
        <div class="footer">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
          <span>10 referenced slides</span>
        </div>
      </div>
    </div>
  `,
  styles: [`
    .container {
