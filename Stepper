      cursor: pointer;
      border-radius: 0.375rem;
      transition: background-color 0.2s;
    }

    .prompt-button:hover {
      background-color: #f9fafb;
    }

    .prompt-left {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .green-dot {
      width: 10px;
