      box-sizing: content-box;
    }

    .prompt-name {
      color: #374151;
      font-weight: 500;
      font-size: 1rem;
    }

    .chevron {
      color: #9ca3af;
      transition: transform 0.2s;
      flex-shrink: 0;
    }

    .chevron.expanded {
      transform: rotate(90deg);
    }

    .slides-container {
      padding-left: 2.5rem;
      padding-top: 0.5rem;
      padding-bottom: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .slide-item {
      width: 12rem;
