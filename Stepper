        { id: 8, title: 'Slide 8', image: 'https://via.placeholder.com/200x150/A29BFE/fff?text=Slide+8' },
        { id: 9, title: 'Slide 9', image: 'https://via.placeholder.com/200x150/FD79A8/fff?text=Slide+9' },
        { id: 10, title: 'Slide 10', image: 'https://via.placeholder.com/200x150/FDCB6E/333?text=Slide+10' },
      ]
    }
  ];

  togglePrompt(promptId: number): void {
    this.expandedPrompt = this.expandedPrompt === promptId ? null : promptId;
  }
}
