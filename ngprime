import { NgModule } from '@angular/core';
import { BrowserModule } from '@angular/platform-browser';
import { BrowserAnimationsModule } from '@angular/platform-browser/animations';
import { SidebarModule } from 'primeng/sidebar';
import { ButtonModule } from 'primeng/button';
import { RippleModule } from 'primeng/ripple';
import { TooltipModule } from 'primeng/tooltip';

import { AppComponent } from './app.component';

@NgModule({
  declarations: [AppComponent],
  imports: [
    BrowserModule,
    BrowserAnimationsModule,
    SidebarModule,
    ButtonModule,
    RippleModule,
    TooltipModule
  ],
  providers: [],
  bootstrap: [AppComponent]
})
export class AppModule { }

// app.component.ts
import { Component } from '@angular/core';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent {
  sidebarExpanded = false;

  menuItems = [
    { icon: 'pi pi-book', label: 'Content Studio' },
    { icon: 'pi pi-pencil', label: 'New Search' },
    { icon: 'pi pi-comment', label: 'New Conversation' },
    { icon: 'pi pi-filter', label: 'Filters' }
  ];

  toggleSidebar() {
    this.sidebarExpanded = !this.sidebarExpanded;
  }
}

// app.component.html
<div class="app-container">
  <div class="sidebar" [class.expanded]="sidebarExpanded">
    <div class="content-studio-header">
      <span *ngIf="sidebarExpanded">Content Studio</span>
      <button 
        pButton 
        [icon]="sidebarExpanded ? 'pi pi-angle-left' : 'pi pi-angle-right'"
        class="p-button-text p-button-rounded toggle-btn"
        (click)="toggleSidebar()"
        [pTooltip]="sidebarExpanded ? 'Collapse' : 'Expand'"
        tooltipPosition="right">
      </button>
    </div>

    <div class="menu-items">
      <div 
        *ngFor="let item of menuItems" 
        class="menu-item"
        [pTooltip]="!sidebarExpanded ? item.label : ''"
        tooltipPosition="right">
        <i [class]="item.icon"></i>
        <span *ngIf="sidebarExpanded" class="menu-label">{{ item.label }}</span>
      </div>
    </div>
  </div>

  <div class="main-content">
    <!-- Your main content here -->
  </div>
</div>

